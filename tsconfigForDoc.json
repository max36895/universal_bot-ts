{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/bot/api/*"],
      "@components/*": ["src/bot/components/*"],
      "@controller/*": ["src/bot/controller/*"],
      "@core/*": ["src/bot/core/*"],
      "@models/*": ["src/bot/models/*"],
      "@utils/*": ["src/bot/utils/*"],
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "includes": [
    "src/api/**/*",
    "src/components/**/*",
    "src/controller/**/*",
    "src/core/**/*",
    "src/modules/**/*",
    "src/utils/**/*",
    "src/*.ts",
    "console/**/*"
  ],
  "exclude": [
    "node_modules",
    "console/template/**/*"
  ],
  "types": [ "mocha", "chai" ],
  "typeRoots": [
    "./node_modules/@types"
  ]
}
