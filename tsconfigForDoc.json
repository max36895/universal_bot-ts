{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "src/api/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@controller/*": [
        "src/controller/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@platforms/*": [
        "src/platforms/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "includes": [
    "src/api/**/*",
    "src/components/**/*",
    "src/controller/**/*",
    "src/core/**/*",
    "src/platforms/**/*",
    "src/modules/**/*",
    "src/utils/**/*",
    "src/*.ts",
    "console/**/*"
  ],
  "exclude": [
    "node_modules",
    "console/template/**/*",
    "tests/**/*"
  ]
}
